<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <!-- Background circle with gradient -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4CAF50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2E7D32;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="trophy" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background circle -->
  <circle cx="50" cy="50" r="48" fill="url(#bg)" stroke="#1B5E20" stroke-width="2"/>
  
  <!-- Tournament trophy icon -->
  <g transform="translate(50,50)">
    <!-- Trophy cup -->
    <path d="M-12,-15 L12,-15 L10,5 L-10,5 Z" fill="url(#trophy)" stroke="#E65100" stroke-width="1"/>
    <!-- Trophy handles -->
    <path d="M-12,-10 Q-18,-10 -18,-5 Q-18,0 -12,0" fill="none" stroke="url(#trophy)" stroke-width="2"/>
    <path d="M12,-10 Q18,-10 18,-5 Q18,0 12,0" fill="none" stroke="url(#trophy)" stroke-width="2"/>
    <!-- Trophy base -->
    <rect x="-8" y="5" width="16" height="4" fill="url(#trophy)" stroke="#E65100" stroke-width="1"/>
    <rect x="-10" y="9" width="20" height="6" fill="url(#trophy)" stroke="#E65100" stroke-width="1"/>
  </g>
  
  <!-- Text "T" for Tournament -->
  <text x="50" y="75" font-family="Arial, sans-serif" font-size="12" font-weight="bold" text-anchor="middle" fill="white">T</text>
</svg>
